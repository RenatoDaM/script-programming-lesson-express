<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>My Pet Pal Account</title>
    <style>
        table {
            margin-top: 20px;
            width: 100%;
        }
        th, td {
            padding: 8px 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5 mb-5 text-center" style="font-family:Arial, Helvetica, sans-serif; color: #28ff57;"><b>My Pet Pal Account</b></h1>

        <h2 class="mt-5 text-center">Customer and Pet Information</h2>
        <div class="mt-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Customer name</th>
                        <th>CPF</th>
                        <th>Pets</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% sampleData.forEach(customer => { %>
                        <tr>
                            <td><%= customer.id %></td>
                            <td><%= customer.name %></td>
                            <td><%= customer.cpf %></td>
                            <td>
                                <ul>
                                    <% if (customer.pets && customer.pets.length > 0) { %>
                                        <% customer.pets.forEach(pet => { %>
                                            <li><%= pet.name %> - <%= pet.type %></li>
                                        <% }) %>
                                    <% } else { %>
                                        <li>Nenhum pet associado</li>
                                    <% } %>
                                </ul>
                            </td>
                            <td><a href="/customers/<%= customer.id %>/newPet" class="btn btn-primary">Add new Pet</a></td>
                        </tr>
                    <% }) %>
                    <a href="/customers/newcustomer" class="btn btn-primary">Add new Customer and his Pet</a>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
